{
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "description": "JavaScript High Precision Countdown",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "countdown",
    "timer",
    "spike"
  ],
  "scripts": {
    "start": "tsdx watch --verbose --format cjs,esm,umd --name countdown",
    "build": "tsdx build --format cjs,esm,umd --name countdown",
    "lint": "tsdx lint",
    "prepare": "tsdx build --format cjs,esm,umd --name countdown",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "homepage": "https://github.com/xdoer/CountDown",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@xdoer/countdown",
  "author": "xdoer",
  "module": "dist/countdown.esm.js",
  "size-limit": [
    {
      "path": "dist/countdown.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/countdown.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "husky": "^5.2.0",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
